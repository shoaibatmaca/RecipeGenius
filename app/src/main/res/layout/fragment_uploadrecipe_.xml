<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChefUI.Fragments.uploadrecipe_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/chef_uploadRecipeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:background="@drawable/image"/>


        <EditText
            android:id="@+id/chef_recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Recipe Name"
            android:textColorHint="@color/secondary"
            />
        <EditText
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Chef Email"
            android:textColorHint="@color/secondary"
            />
        <EditText
            android:id="@+id/chef_recipeIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Recipe Ingredient"
            android:textColorHint="@color/secondary"
            />

        <EditText
            android:id="@+id/chef_recipemethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Recipe method"
            android:textColorHint="@color/secondary"
            />
        <EditText
            android:id="@+id/chef_recipeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Recipe Description"
            android:textColorHint="@color/secondary"
            />
        <TextView
           android:id="@+id/chef_selectCuisine"
            android:layout_width="match_parent"
            android:text="Select Cuisine:"
            android:textColor="@color/secondary"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />
        <RadioGroup
            android:id="@+id/chef_RecipeTpeRadioGroup"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/chef_radioButtonPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_premium"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/chef_radioButtonFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_free"/>

        </RadioGroup>

        <Button
            android:id="@+id/chef_uploadRecipebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Upload Recipe"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/chef_updateRecipebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_bg"
            android:layout_marginHorizontal="20dp"
            android:text="Update Recipe"
            />







    </LinearLayout>






</ScrollView>