<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/popularrecipe_customer_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/popularrecipe_customer_recipeimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"
            android:layout_marginTop="-70dp"
            android:background="@drawable/recipedetailbackground"
            android:orientation="vertical">


            <TextView
                android:id="@+id/popularrecipe_customer_recipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make your own food, stay at home"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_margin="8dp" />
            <TextView
                android:id="@+id/popularrecipe_customer_recipeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make your own food, stay at home"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/popularrecipe_customer_recipefulldetailtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Full Detail"
                    android:textStyle="italic"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>



            </RelativeLayout>


        </LinearLayout>







    </LinearLayout>
</LinearLayout>
